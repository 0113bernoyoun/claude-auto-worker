{
  "name": "claude-auto-worker",
  "version": "0.1.0",
  "description": "차세대 Claude Code 자동화 도구 - 안전하고, 유연하고, 확장 가능한 워크플로우 엔진",
  "main": "dist/main.js",
  "bin": {
    "claude-auto-worker": "bin/claude-auto-worker"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start --port 5849",
    "start:dev": "nest start --watch --port 5849",
    "start:debug": "nest start --debug --watch --port 5849",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:cli": "jest --config ./jest.cli.config.js",
    "test:cli:watch": "jest --config ./jest.cli.config.js --watch",
    "test:cli:cov": "jest --config ./jest.cli.config.js --coverage",
    "cli:build": "tsc -p tsconfig.cli.json",
    "cli:dev": "ts-node src/cli/main.ts",
    "dashboard:dev": "next dev",
    "dashboard:build": "next build",
    "dashboard:start": "next start"
  },
  "dependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "chalk": "^5.6.0",
    "chart.js": "^4.4.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "framer-motion": "^10.16.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "nest-commander": "^3.18.0",
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "simple-git": "^3.20.0",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^3.3.0",
    "typeorm": "^0.3.17",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "node_modules/(?!(chalk|#ansi-styles|#supports-color)/)"
    ]
  },
  "keywords": [
    "claude",
    "ai",
    "automation",
    "workflow",
    "nestjs",
    "nextjs",
    "typescript",
    "cli",
    "git",
    "testing"
  ],
  "author": "claude-auto-worker Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/claude-auto-worker.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/claude-auto-worker/issues"
  },
  "homepage": "https://github.com/your-username/claude-auto-worker#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
